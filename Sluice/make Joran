TARGET = sluice
LIBS = -lm
CC = g++
CFLAGS = -g -Wall

.PHONY: default all clean

default: $(TARGET)
all: default

OBJECTS = $(patsubst code/%.cpp,$(wildcard code/*.cpp))
HEADERS = $(wildcard code/*.h)

%.o: %.c $(HEADERS)
	$(CC) $(CFLAGS) -c -g $< -o $@

.PRECIOUS: $(TARGET) $(OBJECTS)

$(TARGET): $(OBJECTS)
	$(CC) $(OBJECTS) -Wall $(LIBS) -o $@

clean:
	-rm -f *.o
	-rm -f $(TARGET)